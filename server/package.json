{
  "name": "new-league-client",
  "version": "0.1-DEV",
  "description": "League backend",
  "bin": "./bin/script.js",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts | npx pino-pretty",
    "start": "node dist/src/server.js | npx pino-pretty",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "tsc -p .",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier:fix": "prettier --write src/**/*.ts",
    "prepare": "husky"
  },
  "keywords": [
    "typescript",
    "express",
    "mongoose",
    "mongodb",
    "pino",
    "eslint",
    "prettier",
    "nodemon"
  ],
  "author": "Code{X} - The Programming Club",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.2.3",
    "pino": "^8.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "nodemon": "^3.1.0",
    "onchange": "^7.1.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
